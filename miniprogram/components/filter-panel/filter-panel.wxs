// 检查数组是否包含某个元素
function includes(arr, value) {
  if (!arr || arr.length === 0) {
    return false;
  }
  for (var i = 0; i < arr.length; i++) {
    if (arr[i] === value) {
      return true;
    }
  }
  return false;
}

// 判断源是否应该高亮
function isSourceActive(selectedSources, sourceId) {
  // 空数组表示全选，所有都高亮
  if (!selectedSources || selectedSources.length === 0) {
    return true;
  }
  // 否则检查是否在选中列表中
  return includes(selectedSources, sourceId);
}

module.exports = {
  includes: includes,
  isSourceActive: isSourceActive
};
