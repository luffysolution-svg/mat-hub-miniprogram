.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
  z-index: 100;
}

.filter-mask.show {
  opacity: 1;
  visibility: visible;
}

.filter-panel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 80%;
  max-width: 600rpx;
  background-color: var(--color-card);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  z-index: 101;
}

.filter-panel.show {
  transform: translateX(0);
}

.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid var(--color-divider);
}

.panel-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--color-text);
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon-text {
  font-size: 32rpx;
  color: var(--color-text-tertiary);
}

.panel-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
  overflow-x: hidden;
  box-sizing: border-box;
}

.section {
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.section-title {
  display: block;
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.toggle-group {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.toggle-group.small {
  display: inline-flex;
}

.toggle-item {
  padding: 12rpx 24rpx;
  background-color: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-full);
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  transition: all 0.2s;
}

.toggle-item.active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: var(--color-text-inverse);
}

.source-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.source-chip {
  padding: 8rpx 16rpx;
  background-color: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  transition: all 0.2s;
  flex-shrink: 0;
  max-width: calc(33% - 8rpx);
  text-align: center;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.source-chip.active {
  background-color: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.filter-label {
  font-size: var(--font-sm);
  color: var(--color-text);
  flex-shrink: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.filter-inputs {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.filter-input {
  width: 100rpx;
  height: 60rpx;
  padding: 0 12rpx;
  background-color: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  text-align: center;
  box-sizing: border-box;
}

.filter-input.single {
  width: 140rpx;
  text-align: left;
}

.filter-dash {
  color: var(--color-text-tertiary);
}

.panel-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid var(--color-divider);
  background-color: var(--color-card);
}

.panel-footer .btn {
  flex: 1;
}
