<view class="skeleton-container">
  <block wx:if="{{type === 'card'}}">
    <view class="skeleton-card" wx:for="{{items}}" wx:key="*this">
      <view class="skeleton-header">
        <view class="skeleton skeleton-tag"></view>
        <view class="skeleton skeleton-tag"></view>
      </view>
      <view class="skeleton skeleton-title"></view>
      <view class="skeleton skeleton-text"></view>
      <view class="skeleton skeleton-text short"></view>
    </view>
  </block>

  <block wx:if="{{type === 'detail'}}">
    <view class="skeleton-detail">
      <view class="skeleton skeleton-detail-title"></view>
      <view class="skeleton-meta-row">
        <view class="skeleton skeleton-text short"></view>
        <view class="skeleton skeleton-text short"></view>
      </view>
      <view class="skeleton skeleton-text"></view>
      <view class="skeleton skeleton-text"></view>
      <view class="skeleton skeleton-text"></view>
      <view class="skeleton skeleton-text short"></view>
    </view>
  </block>

  <block wx:if="{{type === 'list'}}">
    <view class="skeleton-list-item" wx:for="{{items}}" wx:key="*this">
      <view class="skeleton skeleton-avatar"></view>
      <view class="skeleton-list-content">
        <view class="skeleton skeleton-text"></view>
        <view class="skeleton skeleton-text short"></view>
      </view>
    </view>
  </block>
</view>
