.skeleton-container {
  padding: 24rpx 0;
}

.skeleton-card {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.skeleton-header {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.skeleton-tag {
  width: 80rpx;
  height: 32rpx;
  border-radius: var(--radius-sm);
}

.skeleton-title {
  height: 40rpx;
  width: 80%;
  margin-bottom: 16rpx;
  border-radius: var(--radius-sm);
}

.skeleton-text {
  height: 28rpx;
  width: 100%;
  margin-bottom: 12rpx;
  border-radius: var(--radius-sm);
}

.skeleton-text.short {
  width: 60%;
}

.skeleton-detail {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 32rpx;
}

.skeleton-detail-title {
  height: 48rpx;
  width: 90%;
  margin-bottom: 24rpx;
  border-radius: var(--radius-sm);
}

.skeleton-meta-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.skeleton-list-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.skeleton-list-content {
  flex: 1;
}
