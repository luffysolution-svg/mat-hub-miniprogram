.result-card {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-sm);
  transition: box-shadow 0.2s;
}

.result-card:active {
  box-shadow: var(--shadow-md);
}

.card-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.favorite-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.favorite-icon-text {
  font-size: 40rpx;
  color: var(--color-warning);
}

.card-title {
  display: block;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-text);
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
}

.meta-divider {
  color: var(--color-text-tertiary);
}

.meta-journal {
  color: var(--color-primary);
}

.card-abstract {
  display: block;
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.card-properties {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
  margin-bottom: 12rpx;
}

.property-item {
  display: flex;
  flex-direction: column;
  min-width: 140rpx;
}

.property-label {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  margin-bottom: 4rpx;
}

.property-value {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text);
}

.card-footer {
  padding-top: 12rpx;
  border-top: 1rpx solid var(--color-divider);
}

.doi-text {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  font-family: monospace;
}
