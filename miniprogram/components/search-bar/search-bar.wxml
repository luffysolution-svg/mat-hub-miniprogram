<view class="search-bar">
  <view class="search-input-wrap">
    <text class="search-icon-text">🔍</text>
    <input
      class="search-input"
      type="text"
      value="{{inputValue}}"
      placeholder="{{placeholder}}"
      placeholder-class="search-placeholder"
      confirm-type="search"
      focus="{{focus}}"
      bindinput="onInput"
      bindconfirm="onConfirm"
    />
    <view class="clear-btn" wx:if="{{inputValue}}" bindtap="onClear">
      <text class="clear-icon-text">✕</text>
    </view>
  </view>
  <view class="filter-btn" bindtap="onFilterTap">
    <text class="filter-icon-text">⚙</text>
  </view>
</view>
