.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 20rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-md);
}

.search-icon-text {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: var(--font-base);
  color: var(--color-text);
}

.search-placeholder {
  color: var(--color-text-tertiary);
}

.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  margin-left: 8rpx;
}

.clear-icon-text {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  background-color: var(--color-primary-light);
  border-radius: var(--radius-md);
}

.filter-icon-text {
  font-size: 36rpx;
  color: var(--color-primary);
}
