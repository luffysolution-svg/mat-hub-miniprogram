.container {
  min-height: 100vh;
  background-color: var(--color-bg);
}

.tabs {
  display: flex;
  background-color: var(--color-card);
  padding: 0 24rpx;
  border-bottom: 1rpx solid var(--color-divider);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 28rpx 0;
  font-size: var(--font-base);
  color: var(--color-text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

.tab-count {
  font-size: var(--font-xs);
  padding: 2rpx 10rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-full);
}

.history-section {
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.header-actions {
  display: flex;
  gap: 24rpx;
}

.action-text {
  font-size: var(--font-sm);
  color: var(--color-primary);
}

.action-text.danger {
  color: var(--color-error);
}

.history-list {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--color-divider);
  transition: background-color 0.2s;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: var(--color-bg);
}

.item-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-bg);
  border-radius: var(--radius-md);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon-text {
  font-size: 32rpx;
}

.item-icon.material {
  background-color: rgba(139, 92, 246, 0.1);
}

.item-icon.literature {
  background-color: rgba(6, 182, 212, 0.1);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-query {
  display: block;
  font-size: var(--font-base);
  color: var(--color-text);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.item-title {
  display: block;
  font-size: var(--font-base);
  color: var(--color-text);
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-meta {
  display: flex;
  gap: 16rpx;
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
}

.meta-type {
  text-transform: capitalize;
}

.meta-source {
  color: var(--color-primary);
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon-text {
  font-size: 28rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: var(--color-text-tertiary);
}
