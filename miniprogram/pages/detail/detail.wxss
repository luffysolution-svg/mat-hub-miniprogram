.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  align-items: center;
}

.header-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-shrink: 0;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  min-width: 64rpx;
  min-height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-bg);
  border-radius: var(--radius-md);
  padding: 0;
  margin: 0;
  border: none;
  line-height: 1;
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.action-icon-text {
  font-size: 36rpx;
  line-height: 1;
  color: var(--color-warning);
}

/* 分享按钮特殊样式 */
button.action-btn {
  width: 64rpx !important;
  height: 64rpx !important;
  min-width: 64rpx;
  min-height: 64rpx;
}

button.action-btn .action-icon-text {
  color: var(--color-primary);
}

.detail-title {
  display: block;
  font-size: var(--font-xl);
  font-weight: 600;
  color: var(--color-text);
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.detail-meta {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.meta-row {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.meta-row:last-child {
  border-bottom: none;
}

.meta-label {
  width: 160rpx;
  flex-shrink: 0;
  font-size: var(--font-sm);
  color: var(--color-text-tertiary);
}

.meta-value {
  flex: 1;
  font-size: var(--font-sm);
  color: var(--color-text);
  word-break: break-all;
}

.meta-value.highlight {
  color: var(--color-primary);
}

.meta-value.doi {
  font-family: monospace;
  color: var(--color-primary);
}

.copy-icon-text {
  font-size: 28rpx;
  margin-left: 12rpx;
}

.detail-section {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.properties-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.property-card {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 20rpx;
  text-align: center;
}

.property-value {
  display: block;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 8rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}

.property-label {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
}

.property-card.wide {
  grid-column: span 2;
}

/* Data Availability Badges */
.data-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.data-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
}

.data-badge.available {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.data-badge.theoretical {
  background-color: rgba(255, 152, 0, 0.1);
  color: #FF9800;
}

/* Crystal Structure Section */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-link {
  font-size: var(--font-sm);
  color: var(--color-primary);
}

.structure-image-container {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 20rpx;
  margin-bottom: 16rpx;
  min-height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.structure-image {
  width: 100%;
  height: 400rpx;
}

.structure-loading,
.structure-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: var(--color-text-tertiary);
}

.loading-text {
  font-size: var(--font-sm);
}

.retry-link {
  color: var(--color-primary);
  font-size: var(--font-sm);
}

.subsection-title {
  display: block;
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.lattice-params {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.lattice-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.lattice-item {
  text-align: center;
  padding: 8rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
}

.lattice-label {
  display: block;
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  margin-bottom: 4rpx;
}

.lattice-value {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-primary);
}

.atom-sites {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
}

.sites-list {
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
  padding: 8rpx;
}

.site-item {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 12rpx;
  border-bottom: 1rpx solid var(--color-divider);
}

.site-item:last-child {
  border-bottom: none;
}

.site-species {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text);
}

.site-coords {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  font-family: monospace;
}

.site-more {
  padding: 12rpx;
  text-align: center;
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
}

/* Electronic Structure Section */
.electronic-card {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.electronic-image-container {
  min-height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
}

.electronic-image {
  width: 100%;
  height: 350rpx;
}

.electronic-placeholder {
  padding: 40rpx;
  text-align: center;
}

.placeholder-text {
  color: var(--color-primary);
  font-size: var(--font-sm);
}

/* Similar Materials Section */
.similar-list {
  white-space: nowrap;
  padding: 8rpx 0;
}

.similar-item {
  display: inline-block;
  width: 200rpx;
  padding: 16rpx;
  margin-right: 16rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  text-align: center;
  vertical-align: top;
}

.similar-formula {
  display: block;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}

.similar-prop {
  display: block;
  font-size: var(--font-xs);
  color: var(--color-text-secondary);
  margin-bottom: 4rpx;
}

.similar-id {
  display: block;
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
}

.abstract-text {
  display: block;
  font-size: var(--font-base);
  color: var(--color-text-secondary);
  line-height: 1.8;
  text-align: justify;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 24rpx;
}

.detail-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.detail-actions .btn {
  flex: 1;
}

.btn-icon-text {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.references-list {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
}

.reference-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.reference-item:last-child {
  border-bottom: none;
}

.ref-number {
  width: 48rpx;
  flex-shrink: 0;
  font-size: var(--font-sm);
  color: var(--color-text-tertiary);
}

.ref-content {
  flex: 1;
}

.ref-title {
  display: block;
  font-size: var(--font-sm);
  color: var(--color-text);
  line-height: 1.5;
  margin-bottom: 4rpx;
}

.ref-meta {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
}

.empty-refs {
  padding: 32rpx;
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-sm);
}

/* Export Panel */
.export-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 100;
}

.export-mask.show {
  opacity: 1;
  visibility: visible;
}

.export-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-card);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 101;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.export-panel.show {
  transform: translateY(0);
}

.export-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.export-title {
  font-size: var(--font-lg);
  font-weight: 600;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon-text {
  font-size: 32rpx;
  color: var(--color-text-tertiary);
}

.format-tabs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.format-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-md);
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  transition: all 0.2s;
}

.format-tab.active {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
}

.export-content {
  flex: 1;
  min-height: 200rpx;
  max-height: 400rpx;
  margin-bottom: 24rpx;
}

.citation-text {
  height: 100%;
  background-color: var(--color-bg);
  border-radius: var(--radius-md);
  padding: 20rpx;
  font-size: var(--font-sm);
  color: var(--color-text);
  font-family: monospace;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.export-copy-btn {
  width: 100%;
}

/* ==================== PubChem / CAS Styles ==================== */

/* Molecule Image */
.molecule-image-container {
  background-color: #fff;
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.molecule-image {
  width: 300rpx;
  height: 300rpx;
}

/* Property Value Small */
.property-value.small {
  font-size: var(--font-xs);
  word-break: break-all;
  line-height: 1.4;
}

/* External Links */
.external-links {
  margin-top: 20rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
}

.links-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.link-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  background-color: var(--color-primary);
  color: #fff;
  border-radius: var(--radius-sm);
  font-size: var(--font-sm);
}

/* Experimental Properties (CAS) */
.experimental-props {
  margin-top: 20rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
}

.exp-props-list {
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
}

.exp-prop-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid var(--color-divider);
}

.exp-prop-item:last-child {
  border-bottom: none;
}

.exp-prop-name {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  flex-shrink: 0;
  margin-right: 16rpx;
}

.exp-prop-value {
  font-size: var(--font-sm);
  color: var(--color-primary);
  font-weight: 500;
  text-align: right;
}

/* Synonyms Section (CAS) */
.synonyms-section {
  margin-top: 20rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 16rpx;
}

.synonyms-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.synonym-item {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  color: var(--color-text-secondary);
}

.synonym-more {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: var(--color-primary-light);
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  color: var(--color-primary);
}

/* API Error Notice */
.api-error-notice {
  background-color: #fff8e1;
  border: 1rpx solid #ffcc02;
  border-radius: var(--radius-md);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.api-error-notice .error-icon {
  font-size: 48rpx;
}

.api-error-notice .error-text {
  font-size: var(--font-base);
  color: #795548;
  text-align: center;
  line-height: 1.6;
}

.api-error-notice .error-hint {
  font-size: var(--font-sm);
  color: #4CAF50;
  font-weight: 500;
}
