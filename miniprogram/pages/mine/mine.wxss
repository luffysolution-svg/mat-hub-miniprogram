.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 用户信息区域 */
.user-section {
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-align: center;
  color: #fff;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 24rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  backdrop-filter: blur(10px);
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding: 32rpx;
  margin-top: -40rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.stat-number {
  font-size: 44rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 12rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 功能菜单 */
.menu-section {
  margin: 24rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #ecf0f1;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-icon {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 56rpx;
  margin-right: 24rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #7f8c8d;
}

.menu-arrow {
  font-size: 56rpx;
  color: #bdc3c7;
  font-weight: 300;
}

/* 设置区域 */
.settings-section {
  margin: 24rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #ecf0f1;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f8f9fa;
}

.setting-label {
  font-size: 30rpx;
  color: #2c3e50;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.version-text {
  font-size: 26rpx;
  color: #7f8c8d;
}

.arrow {
  font-size: 48rpx;
  color: #bdc3c7;
  font-weight: 300;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 60rpx 40rpx;
}

.footer-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.footer-desc {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
}
