<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view class="user-avatar">{{userInfo.avatar}}</view>
    <view class="user-name">{{userInfo.nickname}}</view>
    <view class="user-desc">科研工具使用者</view>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-section">
    <view class="stat-card">
      <text class="stat-number">{{stats.elementFavorites}}</text>
      <text class="stat-label">收藏元素</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{stats.paperFavorites}}</text>
      <text class="stat-label">收藏文献</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{stats.calcHistory}}</text>
      <text class="stat-label">计算记录</text>
    </view>
    <view class="stat-card">
      <text class="stat-number">{{stats.subscriptions}}</text>
      <text class="stat-label">期刊订阅</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view
      class="menu-item"
      wx:for="{{menuItems}}"
      wx:key="key"
      data-key="{{item.key}}"
      bindtap="onMenuClick"
    >
      <view class="menu-icon" style="background-color: {{item.color}}20; color: {{item.color}}">
        <text>{{item.icon}}</text>
      </view>
      <view class="menu-content">
        <text class="menu-title">{{item.title}}</text>
        <text class="menu-desc">{{item.desc}}</text>
      </view>
      <view class="menu-arrow">›</view>
    </view>
  </view>

  <!-- 其他设置 -->
  <view class="settings-section">
    <view class="setting-item" bindtap="showAbout">
      <text class="setting-label">关于</text>
      <view class="setting-value">
        <text class="version-text">v{{version}}</text>
        <text class="arrow">›</text>
      </view>
    </view>
    <view class="setting-item" bindtap="showFeedback">
      <text class="setting-label">反馈建议</text>
      <view class="setting-value">
        <text class="arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <text class="footer-text">{{appName}}</text>
    <text class="footer-desc">纯前端科研工具箱</text>
  </view>
</view>
