.container {
  min-height: 100vh;
  background-color: var(--color-bg);
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.section-action {
  font-size: var(--font-sm);
  color: var(--color-primary);
}

.card {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 8rpx 24rpx;
}

.subsection-title {
  display: block;
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  padding: 16rpx 0;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.source-list {
  margin-bottom: 8rpx;
}

.source-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.source-item:last-child {
  border-bottom: none;
}

.source-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.source-name {
  font-size: var(--font-base);
  color: var(--color-text);
}

.source-id {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  background-color: var(--color-bg);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.toggle {
  width: 80rpx;
  height: 44rpx;
  background-color: var(--color-border);
  border-radius: 22rpx;
  position: relative;
  transition: background-color 0.2s;
}

.toggle.on {
  background-color: var(--color-primary);
}

.toggle-handle {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  transition: transform 0.2s;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.toggle.on .toggle-handle {
  transform: translateX(36rpx);
}

.divider {
  height: 1rpx;
  background-color: var(--color-divider);
  margin: 8rpx 0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: var(--font-base);
  color: var(--color-text);
}

.info-value {
  font-size: var(--font-base);
  color: var(--color-text-secondary);
}

.info-value.small {
  font-size: var(--font-sm);
}

.action-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.action-row:last-child {
  border-bottom: none;
}

.action-label {
  font-size: var(--font-base);
  color: var(--color-primary);
}

.action-row.danger .action-label {
  color: var(--color-error);
}

.arrow-text {
  font-size: 32rpx;
  color: var(--color-text-tertiary);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-left: 12rpx;
  background-color: var(--color-text-tertiary);
}

.status-dot.online {
  background-color: var(--color-success);
}

.status-dot.offline {
  background-color: var(--color-error);
}

.status-dot.checking {
  background-color: var(--color-warning);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}
