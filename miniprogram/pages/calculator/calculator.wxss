.container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #3498db;
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-label {
  font-size: 24rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  height: calc(100vh - 180rpx);
  padding: 32rpx;
}

.calc-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

/* 输入组 */
.input-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.formula-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.calc-btn {
  height: 80rpx;
  padding: 0 40rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.calc-btn::after {
  border: none;
}

.calc-btn.primary {
  flex: 1;
}

/* 快捷公式 */
.quick-formulas {
  margin-bottom: 32rpx;
}

.quick-label {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.formula-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.formula-tag {
  padding: 12rpx 24rpx;
  background: #ecf0f1;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.formula-tag:active {
  background: #bdc3c7;
}

/* 结果框 */
.result-box {
  margin-top: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea15, #764ba235);
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-formula {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.result-mass {
  font-size: 40rpx;
  font-weight: bold;
  color: #3498db;
}

.result-breakdown {
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(0,0,0,0.1);
}

.breakdown-title {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.breakdown-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
}

.element {
  width: 80rpx;
  font-weight: 600;
  color: #2c3e50;
}

.count {
  flex: 1;
  color: #7f8c8d;
}

.mass {
  font-weight: 600;
  color: #3498db;
}

/* 历史记录 */
.history-section {
  margin-top: 48rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-top: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.history-formula {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.history-mass {
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 参数输入 */
.param-group {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.param-label {
  width: 200rpx;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.param-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.param-picker {
  flex: 1;
}

.picker-view {
  height: 72rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 72rpx;
}

.btn-group {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.result-type {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
}

.result-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 16rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
}

.result-label {
  font-size: 28rpx;
  color: #7f8c8d;
}
