/* pages/tools/tools.wxss */

/* Tab 栏 */
.tab-bar {
  display: flex;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 8rpx;
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-sm);
  transition: all 0.2s;
}

.tab-item.active {
  background-color: var(--color-primary);
}

.tab-text {
  font-size: var(--font-base);
  font-weight: 500;
  color: var(--color-text-secondary);
}

.tab-item.active .tab-text {
  color: var(--color-text-inverse);
}

/* 分类筛选 */
.category-scroll {
  margin-bottom: var(--spacing-md);
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: var(--spacing-sm);
  padding: 4rpx 0;
}

.category-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-full);
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  white-space: nowrap;
  box-shadow: var(--shadow-sm);
  border: 2rpx solid transparent;
}

.category-chip.active {
  background-color: var(--chip-color, var(--color-primary));
  color: white;
  border-color: var(--chip-color, var(--color-primary));
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: 0 var(--spacing-md);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: var(--font-base);
}

.search-icon {
  padding: var(--spacing-sm);
  font-size: var(--font-lg);
}

/* 元素周期表 */
.periodic-table-scroll {
  margin-bottom: var(--spacing-md);
}

.periodic-table {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm);
  box-shadow: var(--shadow-sm);
  display: inline-block;
  min-width: 100%;
}

.pt-row {
  display: flex;
  gap: 4rpx;
  margin-bottom: 4rpx;
}

.pt-cell {
  width: 36rpx;
  height: 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.pt-cell.empty {
  background-color: transparent;
}

.pt-cell.has-element {
  background-color: var(--el-color, #ccc);
  cursor: pointer;
}

.pt-cell.has-element:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.el-number {
  font-size: 14rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1;
}

.el-symbol {
  font-size: 20rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
}

.pt-separator {
  height: 16rpx;
}

.pt-label {
  width: 60rpx;
  font-size: 18rpx;
  color: var(--color-text-tertiary);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.lanthanides, .actinides {
  justify-content: flex-start;
  padding-left: 4rpx;
}

/* 元素列表 */
.elements-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.result-count {
  font-size: var(--font-sm);
  color: var(--color-text-tertiary);
  margin-bottom: var(--spacing-sm);
}

.element-card {
  display: flex;
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.element-card:active {
  opacity: 0.8;
}

.element-card-left {
  width: 120rpx;
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.card-number {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.8);
}

.card-symbol {
  font-size: var(--font-xl);
  font-weight: 700;
  color: white;
}

.element-card-right {
  flex: 1;
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-name {
  font-size: var(--font-md);
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: var(--spacing-xs);
}

.card-info {
  display: flex;
  gap: var(--spacing-md);
}

.card-mass {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
}

.card-category {
  font-size: var(--font-sm);
  font-weight: 500;
}

/* 分子质量计算器 */
.calc-section {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.section-title {
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
}

.formula-input-box {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.formula-input {
  flex: 1;
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background-color: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-md);
  font-size: var(--font-md);
}

.calc-btn {
  width: 160rpx;
  height: 88rpx;
  background-color: var(--color-primary);
  color: white;
  font-size: var(--font-base);
  font-weight: 500;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin: 0;
}

.calc-btn::after {
  border: none;
}

.formula-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  font-weight: 500;
}

.tip-item {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  padding-left: var(--spacing-sm);
}

/* 计算结果 */
.calc-result {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.result-header {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
  padding: var(--spacing-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-formula {
  font-size: var(--font-xl);
  font-weight: 700;
  color: white;
}

.result-mass {
  font-size: var(--font-lg);
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.result-detail {
  padding: var(--spacing-lg);
}

.detail-title {
  font-size: var(--font-base);
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
}

.composition-table {
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.table-header {
  display: flex;
  background-color: var(--color-bg);
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text-secondary);
}

.table-row {
  display: flex;
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: var(--font-sm);
  color: var(--color-text);
  border-top: 1rpx solid var(--color-divider);
}

.col-symbol {
  flex: 2;
}

.col-count, .col-mass, .col-total {
  flex: 1;
  text-align: right;
}

/* 计算历史 */
.calc-history {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.history-title {
  font-size: var(--font-base);
  font-weight: 500;
  color: var(--color-text);
}

.history-clear {
  font-size: var(--font-sm);
  color: var(--color-error);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
}

.history-item:active {
  background-color: var(--color-primary-light);
}

.history-formula {
  font-size: var(--font-base);
  color: var(--color-text);
  font-weight: 500;
}

.history-mass {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
}

/* 常用化学式 */
.quick-formulas {
  background-color: var(--color-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.quick-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--color-bg);
  border-radius: var(--radius-sm);
  min-width: 140rpx;
}

.quick-item:active {
  background-color: var(--color-primary-light);
}

.quick-formula {
  font-size: var(--font-base);
  font-weight: 600;
  color: var(--color-primary);
}

.quick-name {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  margin-top: 4rpx;
}

/* 元素详情弹窗 */
.element-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--spacing-lg);
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  background-color: var(--color-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: var(--spacing-lg);
  text-align: center;
  color: white;
}

.modal-number {
  font-size: var(--font-sm);
  opacity: 0.8;
}

.modal-symbol {
  font-size: 80rpx;
  font-weight: 700;
  line-height: 1.2;
}

.modal-name {
  font-size: var(--font-md);
  margin-top: var(--spacing-xs);
}

.modal-mass {
  font-size: var(--font-base);
  opacity: 0.9;
  margin-top: var(--spacing-xs);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg);
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: var(--spacing-sm) 0;
  border-bottom: 1rpx solid var(--color-divider);
}

.info-label {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
}

.info-value {
  font-size: var(--font-sm);
  color: var(--color-text);
  font-weight: 500;
  text-align: right;
  max-width: 60%;
}

.info-summary {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
}

.summary-title {
  font-size: var(--font-sm);
  font-weight: 500;
  color: var(--color-text);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.summary-text {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  line-height: 1.6;
}

.modal-close {
  padding: var(--spacing-md);
  text-align: center;
  font-size: var(--font-base);
  color: var(--color-primary);
  font-weight: 500;
  border-top: 1rpx solid var(--color-divider);
}

.modal-close:active {
  background-color: var(--color-bg);
}
